<Window x:Class="UtilityAnalyzerStudio.ProjectLoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UtilityAnalyzerStudio"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Utility Analyzer Studio" Height="250" Width="300">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Margin="0,5,0,0" FontSize="25" HorizontalAlignment="Center">Utility Analyzer Studio</TextBlock>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Button Padding="10" Click="ButtonNew_Click" Width="150">New Project</Button>
            <Button Margin="0,15,0,0" Padding="10" Click="ButtonLoad_Click" Width="150">Open Project</Button>
        </StackPanel>

        <TextBlock Grid.Row="2" VerticalAlignment="Bottom" Foreground="Gray" HorizontalAlignment="Center">Licensed under the MIT license by Ricardo Boss</TextBlock>
    </Grid>
</Window>
